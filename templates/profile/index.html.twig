{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col items-center justify-start py-12">
    <div class="w-full max-w-7xl space-y-12">
        
        <!-- Section Profil de l'utilisateur -->
        <div class="bg-gray-800 rounded-lg shadow-lg p-6">
            <h2 class="text-3xl font-bold text-white mb-4">Bonjour, {{ app.user.username }}</h2>
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-lg text-gray-400"><span class="font-semibold text-white">Nom d'utilisateur :</span> {{ app.user.username }}</p>
                    <p class="text-lg text-gray-400"><span class="font-semibold text-white">Email :</span> {{ app.user.email }}</p>
                </div>
                <div>
                    <a href="{{ path('app_profile_edit') }}" class="bg-emerald-600 text-white py-2 px-4 rounded-lg shadow-lg hover:bg-emerald-700 transition-colors">
                        Modifier mes informations
                    </a>
                </div>
            </div>
        </div>

        <!-- Section des biens immobiliers de l'utilisateur -->
        <div class="flex justify-between items-center">
            <h2 class="text-3xl font-bold text-white">Mes Biens Immobiliers</h2>
            <a href="{{ path('app_profile_new_property') }}" class="bg-emerald-600 text-white py-2 px-6 rounded-lg shadow-lg hover:bg-emerald-700 transition-colors">
                Ajouter un bien immobilier
            </a>
        </div>

        <div class="space-y-6">
            {% for bien in bien_immos %}
            <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-2 transition-transform">
                <div class="flex flex-col md:flex-row">
                    <!-- Image du bien -->
                    <div class="md:w-1/3">
                        <img src="{{ asset('images/maisonluxe.png') }}" alt="Image du bien" class="w-full h-full object-cover">
                    </div>

                    <!-- Informations sur le bien -->
                    <div class="p-6 md:w-2/3 flex flex-col justify-between">
                        <div>
                            <h2 class="text-2xl font-semibold text-white">{{ bien.propertyType.name }} à {{ bien.city.name }}</h2>
                            <p class="text-gray-400 mt-2">{{ bien.surface }} m² - {{ bien.nbRooms }} {{ bien.nbRooms > 1 ? 'pièces' : 'pièce' }}</p>
                            <p class="text-gray-500 mt-2">Référence : {{ bien.reference }}</p>
                            <p class="text-emerald-500 mt-4 font-bold">{{ bien.price | number_format(0, '.', ',') }} €</p>
                        </div>

                        <!-- Boutons Voir et Modifier -->
                        <div class="mt-4 flex justify-between">
                            <a href="{{ path('app_profile_property', {id: bien.id}) }}" class="text-sm font-semibold text-white bg-blue-600 py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors">
                                Voir
                            </a>
                            <a href="{{ path('app_profile_edit_property', {id: bien.id}) }}" class="text-sm font-semibold text-white bg-emerald-600 py-2 px-4 rounded-lg hover:bg-emerald-700 transition-colors">
                                Modifier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <p class="text-gray-400 text-center">Aucun bien immobilier ajouté pour le moment.</p>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}



