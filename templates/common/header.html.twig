{% set route = app.request.attributes.get('_route') %}

<nav class="bg-white border-gray-200 dark:bg-gray-900">
  <div class="max-w-screen-xl flex items-center justify-between mx-auto p-4">
    <a href="{{ path('home_page') }}" class="flex items-center space-x-3 rtl:space-x-reverse">
        <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Immo²</span>
    </a>

    <!-- Menu de navigation -->
    <div class="flex items-center space-x-8" id="navbar-default">
      <ul class="flex items-center space-x-8">
        <li>
          <a href="{{ path('home_page') }}" class="block py-2 px-3 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-emerald-700 md:p-0 md:dark:hover:text-emerald-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent {{ route == 'home_page' ? 'active' : 'text-gray-900 dark:text-white' }}">Accueil</a>
        </li>
        <li>
          <a href="{{ path('properties_list') }}" class="block py-2 px-3 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-emerald-700 md:p-0 md:dark:hover:text-emerald-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent {{ route starts with 'properties' ? 'active' : 'text-gray-900 dark:text-white' }}">Voir nos biens</a>
        </li>
        <li>
          <a href="{{ path('about_page') }}" class="block py-2 px-3 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-emerald-700 md:p-0 md:dark:hover:text-emerald-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent {{ route == 'about_page' ? 'active' : 'text-gray-900 dark:text-white' }}">A propos</a>
        </li>
        <li>
          <a href="{{ path('contact_page') }}" class="block py-2 px-3 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-emerald-700 md:p-0 md:dark:hover:text-emerald-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent {{ route == 'contact_page' ? 'active' : 'text-gray-900 dark:text-white' }}">Contact</a>
        </li>
      </ul>

      <!-- Mon compte / Connexion bouton -->
      <div class="relative">
        {% if app.user %}
          <button id="dropdownHoverButton" data-dropdown-toggle="dropdownHover" data-dropdown-trigger="hover" class="text-white bg-emerald-600 hover:bg-emerald-700 focus:ring-4 focus:outline-none focus:ring-emerald-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-emerald-600 dark:hover:bg-emerald-700 dark:focus:ring-emerald-800" type="button">
              Mon Compte
              <svg class="w-2.5 h-2.5 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
              </svg>
          </button>
          <!-- Dropdown menu -->
          <div id="dropdownHover" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700">
              <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownHoverButton">
                <li>
                  <a href="{{ path('admin_home') }}" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600">Administration</a>
                </li>
                <li>
                  <a href="{{ path('app_profile_index') }}" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600">Profil</a>
                </li>
                <li>
                  <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-red-600 hover:bg-gray-100 dark:text-red-400 dark:hover:bg-gray-600">Déconnexion</a>
                </li>
              </ul>
          </div>
        {% else %}
          <a href="{{ path('app_login') }}" class="text-gray-800 dark:text-gray-300 hover:text-emerald-600 dark:hover:text-emerald-500 px-4 py-2 rounded-lg">
            Connexion
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</nav>







