<div class="container mx-auto p-4">
    <div class="flex flex-col lg:flex-row my-4 bg-white rounded-lg shadow-lg overflow-hidden">
        <!-- Image Section -->
        <div class="md:basis-1/2">
            <img src="{{ asset('images/maisonluxe.png')}}" alt="photo du bien" class="w-full object-cover">
        </div>
        <!-- Text Section -->
        <div class="md:basis-1/2 p-5 flex flex-col justify-between">
            <h3 class="flex justify-between items-start">
                <!-- Left Section -->
                <div class="flex-1">
                    <div class="font-semibold text-lg">{{ property.city.name }} {{ property.postalCode }}</div>
                    <div class="text-sm text-gray-600">
                        {{ property.surface }} m<sup>2</sup>, 
                        {{ property.nbRooms }}
                        {{ property.nbRooms > 1 ? 'pièces' : 'pièce' }}
                    </div>
                    <div class="text-xs text-gray-500">Ref: {{ property.reference }}</div>
                </div>
                <!-- Right Section -->
                <div class="flex-none text-right ml-4">
                    <p class="font-semibold text-lg">{{ property.propertyType.name }} T{{ property.nbRooms }} à vendre</p>
                    <p class="text-xl font-bold text-amber-600">{{ property.price | number_format(0, '.', ',') }} €</p>
                </div>
            </h3>
            <div class="my-4 w-full h-px bg-amber-500"></div>
            <div class="text-gray-700">{{ property.content | slice(0, 400) }}...</div>
            <div class="bg-amber-500 mt-4 text-center rounded-lg hover:bg-amber-600">
                <a href="{{ path('property_item', {'id': property.id}) }}" class="block p-2 text-white font-semibold">Voir plus</a>
            </div>
        </div>
    </div>
</div>

