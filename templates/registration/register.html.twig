{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 dark:bg-gray-900">
    <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-lg">
        <h2 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-6">Créer un compte</h2>

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
        
        <!-- Username -->
        <div>
            {{ form_label(registrationForm.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white shadow-sm focus:ring-emerald-500 focus:border-emerald-500'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>

        <!-- Email -->
        <div>
            {{ form_label(registrationForm.email, 'Adresse Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white shadow-sm focus:ring-emerald-500 focus:border-emerald-500'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <!-- Password -->
        <div>
            {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white shadow-sm focus:ring-emerald-500 focus:border-emerald-500'}}) }}
            {{ form_errors(registrationForm.plainPassword.first) }}
        </div>

        <!-- Password confirmation -->
        <div>
            {{ form_label(registrationForm.plainPassword.second, 'Confirmez votre mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white shadow-sm focus:ring-emerald-500 focus:border-emerald-500'}}) }}
            {{ form_errors(registrationForm.plainPassword.second) }}
        </div>

        <!-- Bouton d'inscription -->
        <div class="text-center mt-8">
            <button type="submit" class="w-full px-6 py-3 bg-emerald-600 text-white font-semibold rounded-lg hover:bg-emerald-700 transition-colors">
                Inscription
            </button>
        </div>

        {{ form_end(registrationForm) }}

        <!-- Lien vers la page de connexion -->
        <p class="text-center mt-6 text-sm text-gray-600 dark:text-gray-400">
            Déjà un compte ? <a href="{{ path('app_login') }}" class="text-emerald-600 hover:underline">Connectez-vous ici</a>.
        </p>
    </div>
</div>
{% endblock %}



