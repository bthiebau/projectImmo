{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 dark:bg-gray-900">
    <div class="w-full bg-white rounded-lg shadow dark:border sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h1 class="text-3xl font-bold text-center text-gray-800 dark:text-white">Connexion</h1>

            <form class="space-y-6" method="post">
                <!-- Email -->
                <div>
                    <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Votre Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" required autofocus
                           class="block w-full p-2.5 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 sm:text-lg dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 focus:ring-primary-600 focus:border-primary-600">
                </div>

                <!-- Mot de passe -->
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Mot de passe</label>
                    <input type="password" name="_password" id="password" required
                           class="block w-full p-2.5 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 sm:text-lg dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 focus:ring-primary-600 focus:border-primary-600" placeholder="••••••••">
                </div>

                <!-- CSRF Token -->
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <!-- Bouton de connexion -->
                <div class="text-center mt-6">
                    <button type="submit" class="w-full px-6 py-3 bg-emerald-600 text-white font-semibold rounded-lg hover:bg-emerald-700 transition-colors text-lg">
                        Se connecter
                    </button>
                </div>

                <!-- Lien vers l'inscription -->
                <p class="text-center mt-4 text-sm text-gray-600 dark:text-gray-400">
                    Pas encore inscrit ? <a href="{{ path('app_register') }}" class="text-emerald-600 hover:underline">Inscrivez-vous ici</a>.
                </p>
            </form>
        </div>
    </div>
</div>
{% endblock %}







