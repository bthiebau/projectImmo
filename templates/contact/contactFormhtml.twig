{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
<!-- Structure de page avec un footer collant -->
<div class="min-h-screen flex flex-col"> <!-- min-h-screen pour occuper toute la hauteur -->
    
    <!-- Contenu principal de la page (flex-grow pour occuper l'espace restant) -->
    <main class="flex-grow">
        <section class="relative bg-cover bg-center w-full h-96" style="background-image: url('{{ asset('images/contact-bg.jpg') }}');">
            <div class="absolute inset-0 bg-black opacity-50"></div>
            <div class="container mx-auto h-full flex justify-center items-center relative z-10">
                <h1 class="text-4xl font-bold text-white text-center">Contactez-nous</h1>
            </div>
        </section>

        <section class="py-12 bg-gray-100 dark:bg-gray-900">
            <div class="container mx-auto px-6 lg:px-16">
                <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg">
                    <h2 class="text-2xl font-bold mb-6 text-gray-800 dark:text-white text-center">Nous sommes l√† pour vous aider</h2>
                    
                    {{ form_start(contactForm, {'attr': {'class': 'space-y-6'}}) }}
                    
                    <!-- Nom -->
                    <div>
                        {{ form_label(contactForm.name, 'Votre Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                        {{ form_widget(contactForm.name, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white shadow-sm focus:ring-emerald-500 focus:border-emerald-500'}}) }}
                        {{ form_errors(contactForm.name) }}
                    </div>

                    <!-- Email -->
                    <div>
                        {{ form_label(contactForm.email, 'Votre Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                        {{ form_widget(contactForm.email, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white shadow-sm focus:ring-emerald-500 focus:border-emerald-500'}}) }}
                        {{ form_errors(contactForm.email) }}
                    </div>

                    <!-- Message -->
                    <div>
                        {{ form_label(contactForm.message, 'Votre Message', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                        {{ form_widget(contactForm.message, {'attr': {'class': 'mt-1 block w-full h-40 rounded-lg border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white shadow-sm focus:ring-emerald-500 focus:border-emerald-500', 'rows': '16'}}) }}
                        {{ form_errors(contactForm.message) }}
                    </div>

                    <!-- Bouton de soumission -->
                    <div class="text-center mt-8"> <!-- Ajout de mt-8 pour espacer le bouton -->
                        <button type="submit" class="w-full md:w-1/2 px-6 py-3 bg-emerald-600 text-white font-semibold rounded-lg hover:bg-emerald-700 transition-colors">
                            Envoyer
                        </button>
                    </div>


                    {{ form_end(contactForm) }}
                </div>
            </div>
        </section>
    </main>
</div>
{% endblock %}

